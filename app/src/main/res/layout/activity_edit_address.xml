<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/window_bg"

    tools:context="com.muran.mrshop.ui.more.my.EditAddressActivity">
    <include layout="@layout/include_title_bar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
                <TextView
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="@color/new_article_title_color"
                    android:text="收件人:" />

                <EditText
                    android:id="@+id/tv_receiver"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:background="@null"
                    android:textSize="16sp"
                    android:textColor="@color/new_article_title_color"
                    android:hint="输入姓名"
                    android:text="" />


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/rp_time" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/new_article_title_color"
                android:text="联系电话:" />

            <EditText
                android:id="@+id/tv_receiver_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:lines="1"
                android:maxLength="12"
                android:background="@null"
                android:textColor="@color/new_article_title_color"
                android:textSize="16sp"
                android:hint="请输入手机号"
                android:inputType="number"
                android:text="" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/rp_time" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/ll_area_select"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/new_article_title_color"
                android:text="所在地区:" />

            <TextView
                android:id="@+id/edit_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@null"
                android:lineSpacingExtra="10dp"
                android:textSize="16sp"
                android:textColor="@color/new_article_title_color"
                android:hint="点击选择"
                android:text="" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/rp_time" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:textSize="16sp"
                android:textColor="@color/new_article_title_color"
                android:text="邮编:" />

            <EditText
                android:id="@+id/edit_postcode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:gravity="center_vertical"
                android:lines="1"
                android:maxLength="12"
                android:background="@null"
                android:textSize="16sp"
                android:textColor="@color/new_article_title_color"
                android:hint="请输入邮编"
                android:inputType="number"
                android:text="" />
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dip"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/rp_time" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingTop="10dp">

            <EditText
                android:id="@+id/edit_detail_address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="top"
                android:background="@null"
                android:lineSpacingExtra="10dp"
                android:lines="3"
                android:hint="详细街道地址"
                android:textColor="@color/new_article_title_color"
                android:textSize="16sp"
                android:text="" />
        </LinearLayout>




    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_address_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical">

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="保存"
            android:textColor="@color/white"
            android:id="@+id/btn_save_address"
            android:background="@drawable/btn_maincolor_bg_cor"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:text="删除"
            android:textColor="@color/white"
            android:id="@+id/btn_delete_address"
            android:background="@drawable/btn_red_bg_cor"/>

    </LinearLayout>
    <View
        android:id="@+id/vMasker"
        android:visibility="gone"
        android:background="#e0000000"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>

</LinearLayout>
